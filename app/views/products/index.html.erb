<h1>Products</h1>

<%= link_to "New product", new_product_path if authenticated? %>

<ul id="products">
  <% @products.each do |product| %>
    <li>
        <%= link_to product.name, product %>
        <% if authenticated? %>
            <%= link_to "Edit", edit_product_path(product) %>
            <%= button_to "Delete", @product, method: :delete, data: { turbo_confirm: "Are you sure?\nThis action is irreversible." } %>
        <% end %>
    </li>
  <% end %>
</ul>
